@{
    ViewBag.Title = "EditCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script src="~/ScriptsCustom/Admin/EditCoursesScript.js"></script>
}

<h2>Admin</h2>


<div class="row">
    <ul class="nav nav-tabs">
        <li><a href="EditUser">User</a></li>
        <li class="active"><a href="EditCourses">Course</a></li>
        <li><a href="EditTemplates">Template</a></li>
    </ul>
</div>


<h4>EditCourses</h4>

<table class="table table-striped">
    <thead class="Cust-Font-Bold">
        <tr>
            <td>Course Name</td>
            <td>Description</td>
            <td>Active</td>
            <td>Delete Course</td>
        </tr>
    </thead>

    <tbody data-bind="foreach: CourseOptions">
        <tr>
            <td>
                <input type="text" data-bind="value: CourseName, enable: IsActive" /></td>
            <td>
                <textarea data-bind="value: CourseNote, enable: IsActive"></textarea></td>
            <td>
                <input type="checkbox" data-bind="checked: IsActive" /></td>
            <td>
                <button class="btn-default" data-bind="click: $root.ConfirmDeleteCourseButton">X</button>
            </td>
        </tr>
    </tbody>
</table>

<button class="btn btn-default" data-bind="click: GoBackButton">Go Back</button>
<button class="btn btn-primary" data-bind="click: SaveCourseChangesButton">Save</button>
<button class="btn btn-primary" data-bind="click: CreateNewCourseButton">Create New Course</button>


<!-- Modal -->
<div class="modal fade" id="createCourseModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Create New Course</h4>
            </div>
            <div class="modal-body">
                <div data-bind="with: SaveCourseOptions">
                    <table>
                        <tr>
                            <td>
                                <label>Course Name:</label></td>
                        </tr>
                        <tr>
                            <td>
                                <input type="text" data-bind="value: CourseName" /></td>
                        </tr>
                        <tr>
                            <td>
                                <label>Description:</label></td>
                        </tr>
                        <tr>
                            <td>
                                <textarea rows="7" cols="70" data-bind="value: CourseNote"></textarea></td>
                        </tr>

                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-bind="click: SaveNewCourseButton">Save New Course</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</div>
<!-- /.modal -->


<!-- Modal -->
<div class="modal fade" id="deleteCourseModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">WARNING</h4>
            </div>
            <div class="modal-body">
                <p>
                    This will completely delete this course from the system as well 
                    as remove all associations with other users. Are you sure this is what
                    you want to do?
                </p>
          
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button  id="deleteCourseButton" type="button" class="btn btn-danger">Confirm Delete</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</div>
<!-- /.modal -->
